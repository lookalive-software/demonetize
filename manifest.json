 {
    "name": "Demonitize",
    "description": "Customize your BitClout experience -- price display, comment filtering, etc",
    "version": "0.1.1",
    "author": "@cdj",
    "manifest_version": 3,
    "content_security_policy": "default-src 'self'",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "scripting"],
    "homepage_url": "https://bitclout.com/u/demonitize",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/demonitize16.png",
            "32": "/images/demonitize32.png",
            "48": "/images/demonitize48.png",
            "128": "/images/demonitize128.png"
        }
    },
    "icons": {
        "16": "/images/demonitize16.png",
        "32": "/images/demonitize32.png",
        "48": "/images/demonitize48.png",
        "128": "/images/demonitize128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://bitclout.com/*"],
            "run_at": "document_end",
            "js": ["contentScript.js"],
            "css" : ["contentStyle.css"]
        }
    ]
  }