 {
    "name": "Demonitize",
    "description": "A string replacer to make BitClout a little bit less like a casino.",
    "version": "0.1.0",
    "author": "@cdj",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/demonitize16.png",
            "32": "/images/demonitize32.png",
            "48": "/images/demonitize48.png",
            "128": "/images/demonitize128.png"
        }
    },
    "icons": {
        "16": "/images/demonitize16.png",
        "32": "/images/demonitize32.png",
        "48": "/images/demonitize48.png",
        "128": "/images/demonitize128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://bitclout.com/*"],
            "run_at": "document_end",
            "js": ["contentScript.js"],
            "css" : ["contentStyle.css"]
        }
    ]
  }